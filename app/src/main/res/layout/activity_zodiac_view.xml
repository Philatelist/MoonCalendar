<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3"
        android:layout_below="@id/my_toolbar"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            >

            <LinearLayout>
                <Button
                    android:id="@+id/button_zodiac_aries"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:text="Aries"
                    />

                <Button
                    android:id="@+id/button_zodiac_taurus"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:text="Taurus"
                    />

                <Button
                    android:id="@+id/button_zodiac_gemini"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:text="Gemini"
                    />

            </LinearLayout>

            <LinearLayout>
                <Button
                    android:id="@+id/button_zodiac_cancer"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:text="Cancer"
                    />

                <Button
                    android:id="@+id/button_zodiac_leo"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:text="Leo"
                    />

                <Button
                    android:id="@+id/button_zodiac_virgo"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:text="Virgo"
                    />

            </LinearLayout>

            <LinearLayout>
                <Button
                    android:id="@+id/button_zodiac_libra"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:text="Libra"
                    />

                <Button
                    android:id="@+id/button_zodiac_scorpio"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:text="Scorpio"
                    />

                <Button
                    android:id="@+id/button_zodiac_sagittarius"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:text="Sagittar"
                    />

            </LinearLayout>

            <LinearLayout>
                <Button
                    android:id="@+id/button_zodiac_capricorn"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:text="Capricorn"
                    />

                <Button
                    android:id="@+id/button_zodiac_aquarius"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:text="Aquarius"
                    />

                <Button
                    android:id="@+id/button_zodiac_pisces"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:text="Pisces"
                    />

            </LinearLayout>

        </TableLayout>
    </ScrollView>
</RelativeLayout>